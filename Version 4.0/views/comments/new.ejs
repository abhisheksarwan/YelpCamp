<%- include("../partials/header") -%>
<form method="POST" action="/camps/<%= camp._id %>/comment">


    <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height:100vh;">
        <h4>Create a new Comment on <%= camp.name %></h4>
        <div class="form-group">
            <label for="text">Comment</label>
            <input type="text" class="form-control" name="comment[text]" id="text" required>
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="comment[author]" id="author" required>
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-lg btn-primary">
        </div>
    </div>
    </div>
</form>

<%- include("../partials/footer") -%>