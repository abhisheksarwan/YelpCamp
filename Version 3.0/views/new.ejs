<%- include("partials/header") -%>
<form method="POST" action="/camps">


    <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height:100vh;">
        <h4>Create a new campground</h4>
        <div class="form-group">
            <label for="name">Camp Name</label>
            <input type="text" class="form-control" name="campName" id="name" required>
        </div>
        <div class="form-group">
            <label for="url">Camp Image URL</label>
            <input type="text" class="form-control" name="imgURL" id="url" required>
        </div>
        <div class="form-group">
            <label for="desc">Camp Description</label>
            <input type="text" class="form-control" name="description" id="desc" required>
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-lg btn-primary">
        </div>
    </div>
    </div>
</form>